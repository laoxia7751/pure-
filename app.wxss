@import 'dist/style/weui.wxss';
page{
    background-color: #fff;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    box-sizing: border-box;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}
.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.fl{
    float:left;
}

.fr{
    float:right;
}

.por{
    position: relative;
}

.poa{
    position: absolute;
}

.db{
    display: block;
}

.dib{
    display: inline-block;
}

.flex{
    display: flex;
}

.jc{
    justify-content: center;
}

.ac{
    align-items: center;
}

.hc{
    position: absolute;
    transform: translateY(-50%);
    top:50%;
}

.lc{
    position: absolute;
    transform: translateX(-50%);
    left:50%;
}

.allc{
    position: absolute;
    transform: translate(-50%,-50%);
    left:50%;
    top:50%;
}
.m0{
    margin: 0;
}
.p0{
    padding: 0;
}